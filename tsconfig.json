{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "esnext", "dom"
    ],
    "baseUrl": "./packages",
    "target": "es5",
    "module": "es2015",
    "types": [
      "node", "jest"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "packages/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist"
  ]
}
