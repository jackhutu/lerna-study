{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.16.4"
  },
  "dependencies": {
    "eslint": "^6.3.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5"
  },
  "lint-staged": {
    "packages/**/*.{js,jsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "scripts": {
    "precommit": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prettier": "prettier --write \"src/**/*.jsx\" \"src/**/*.js\"",
    "lint": "eslint src/**/*.js",
    "publish-l": "lerna publish --conventional-commits --independent"
  }
}
