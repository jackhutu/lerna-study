{
  "name": "lerna-staudy",
  "private": true,
  "devDependencies": {
    "eslint-plugin-prettier": "^3.1.4",
    "father-build": "^1.14.1",
    "jest": "^26.1.0",
    "lerna": "^3.16.4"
  },
  "dependencies": {
    "eslint": "^6.3.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2"
  },
  "lint-staged": {
    "packages/**/*.{js,jsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "precommit": "lint-staged",
    "test": "jest --projects ./packages/*/",
    "prettier": "prettier --write \"src/**/*.jsx\" \"src/**/*.js\"",
    "lint": "eslint src/**/*.js",
    "publish-l": "lerna publish",
    "build": "PACKAGE=house father-build"
  }
}
