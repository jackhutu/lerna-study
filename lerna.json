{
  "changelog": {
    "repo": "jackhutu/lerna-study",
    "labels": {
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":book: Documentation",
      "dependencies": ":deciduous_tree: Dependency",
      "chore": ":turtle: Chore"
    },
    "cacheDir": ".changelog"
  },
  "packages": [ "packages/*" ],
  "loglevel": "success",
  "version": "1.1.0",
  "useWorkspaces": true,
  "registry": "https://registry.npmjs.org",
  "npmClient": "yarn",
  "ignoreChanges": [
    "CHANGELOG.md",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/__testfixtures__/**"
  ]
}